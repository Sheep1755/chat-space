.side-header
   .side-header__user-name
      .top-items
         %p.top-items__name
            = current_user.name
         %ul.top-items__icons
            %li.top-iems__icons__edit
               = link_to new_group_path do
                  = icon("fas", "edit")
            %li.top-items__icons__set      
               = link_to edit_user_path(current_user) do
                  = icon("fas", "cog")   
   .side-contents
      - current_user.groups.each do |group|
         .group-list
            = link_to group_messages_path(group) do
               .group-list__group-name
                  = group.name
               .group-list__grop-message  
                  = group.show_last_message